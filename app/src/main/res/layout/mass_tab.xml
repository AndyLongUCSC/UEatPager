<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.70">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="0.70"
            android:text="MASS TAB"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/enterMass"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="47dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintRight_toLeftOf="@+id/outMass"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp" />

        <EditText
            android:id="@+id/outMass"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="47dp"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/enteredMassSpin"
            android:spinnerMode="dialog"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.382"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/desiredMassSpin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/enterMass"
            app:layout_constraintVertical_bias="0.043" />

        <Spinner
            android:id="@+id/desiredMassSpin"
            android:spinnerMode="dialog"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="47dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outMass"
            app:layout_constraintVertical_bias="0.043" />

        <ImageView
            android:id="@+id/arrowmass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="193dp"
            app:layout_constraintLeft_toRightOf="@+id/enteredMassSpin"
            app:layout_constraintRight_toLeftOf="@+id/desiredMassSpin"
            app:srcCompat="?attr/actionModeCloseDrawable"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/arrowmass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="243dp"
            android:rotation="180"
            android:scaleY="-1"
            app:layout_constraintLeft_toRightOf="@+id/enterMass"
            app:layout_constraintRight_toLeftOf="@+id/outMass"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/homeAsUpIndicator" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>